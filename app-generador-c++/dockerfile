# Usamos la imagen base de GCC para compilar C++
FROM gcc:latest

# Instalar las dependencias necesarias para compilar la aplicaci贸n C++
RUN apt-get update && apt-get install -y \
    libpqxx-dev \
    libpq-dev \
    make \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Establecer el directorio de trabajo dentro del contenedor
WORKDIR /app

# Copiar el c贸digo fuente al contenedor
COPY . /app

# Compilar la aplicaci贸n
RUN g++ -o app main.cpp -lpqxx -lpq

# Comando por defecto para ejecutar la aplicaci贸n
CMD ["./app"]
